#disable_html_escaping()
###macro (esc $text)$xmlutils.escape($text)#end
<!--
RSS generated by JIRA ($buildInfo) at $currentDate
#if (!$customViewRequested)

It is possible to restrict the fields that are returned in this document by specifying the 'field' parameter in your request.
For example, to request only the issue key and summary add field=key&field=summary to the URL of your request.
#if ($exampleURLPrefix)
For example:
${exampleURLPrefix}field=key&amp;field=summary
#end
#end
-->
<!-- If you wish to do custom client-side styling of RSS, uncomment this:
<?xml-stylesheet href="${requestContext.baseUrl}/styles/jiraxml2html.xsl" type="text/xsl"?>
-->
<rss version="0.92">
    <channel>
        <title>#xmlEscape($title)</title>
## Ensure we have no spaces around the link tag and its value. JRA-16175
        <link>#xmlEscape($link)</link>
        <description>#xmlEscape($!{description})</description>
        #if ($rssLocale)
        <language>$rssLocale</language>
        #end
        #if ($totalissue)
        <issue start="$!{startissue}" end="$!{endissue}" total="$!{totalissue}"/>
        #end
        <build-info>
            <version>#xmlEscape($version)</version>
            <build-number>#xmlEscape($buildNumber)</build-number>
            <build-date>#xmlEscape($buildDate)</build-date>
        </build-info>