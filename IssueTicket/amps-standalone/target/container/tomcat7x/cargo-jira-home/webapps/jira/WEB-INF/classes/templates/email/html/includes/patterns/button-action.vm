#disable_html_escaping()

<table id="actions-pattern" cellspacing="0" cellpadding="0" border="0" width="100%">
    <tr>
        <td id="actions-pattern-container" valign="middle">
            <table cellspacing="0" cellpadding="0" border="0" class="aui-button-email-container">
                <tr>
                    <td class="aui-button-email" style="background: #3068a2; background: -moz-linear-gradient(top, #4687ce 0%, #3068a2 100%); background: -webkit-linear-gradient(top, #4687ce 0%,#3068a2 100%); background: -o-linear-gradient(top, #4687ce 0%,#3068a2 100%); background: -ms-linear-gradient(top, #4687ce 0%,#3068a2 100%); background: linear-gradient(top, #4687ce 0%,#3068a2 100%); -moz-box-sizing: border-box; -webkit-font-smoothing: antialiased;">
                        <a href="$actionButtonUrl" class="aui-button-email-link">$actionButtonText</a>
                    </td>
                </tr>
            </table>
        </td>
    </tr>
</table>