#disable_html_escaping()
###macro (esc $text)$xmlutils.escape($text)#end
<!--  RSS generated by JIRA ($buildInfo) at $currentDate -->
<!-- If you wish to do custom client-side styling of RSS, uncomment this:
<?xml-stylesheet href="${requestContext.baseUrl}/styles/jirarss2html.xsl" type="text/xsl"?>
-->
<rss version="2.0">
    <channel>
        <title>#xmlEscape($title)</title>
## Ensure we have no spaces around the link tag and its value. JRA-16175
        <link>#xmlEscape($link)</link>
        <description>#xmlEscape($!{description})</description>
        #if ($rssLocale)
        <language>$rssLocale</language>
        #end
        #if ($totalcomment)

        <comment start="$!{startcomment}" end="$!{endcomment}" total="$!{totalcomment}"/>
        #end

        <build-info>
            <version>$version</version>
            <build-number>$buildNumber</build-number>
            <build-date>$buildDate</build-date>
        </build-info>
